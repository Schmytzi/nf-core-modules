nextflow_process {

    name "Test Process ONT_SPECTRE"
    script "../main.nf"
    process "ONTSPECTRE"

    tag "modules"
    tag "modules_nfcore"
    tag "ontspectre"

    test("homo sapiens - stub") {
        options "-stub"
        when {
            process {
                """
                input[0] = [
                    [ id: 'test' ],
                    file("summary"),
                    file("regions"),
                    file("vcf.gz"),
                    file("vcf.gz.tbi")
                ]
                input[1] = [
                    [ id: 'test' ],
                    file("fasta")
                ]
                input[2] = [
                    [ id: 'test' ],
                    file("fai")
                ]
                input[3] = [ [], [] ]
                input[4] = [ [], [] ]
                input[5] = 1000
                """

            }
        }
        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

}